<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include10"
        layout="@layout/toolbar_edit" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_add_group_picture"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/resource_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include10" />

    <TextView
        android:id="@+id/tv_add_group_add_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko_semibold"
        android:text="Add Photo"
        android:textColor="#116ACC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_add_group_picture" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_add_group_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_add_group_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <EditText
        android:id="@+id/et_add_group_gname"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_corner"
        android:drawableLeft="@drawable/personicon"
        android:drawablePadding="8dp"
        android:fontFamily="@font/amiko_semibold"
        android:gravity="center_vertical"
        android:hint="Group Name"
        android:paddingTop="4dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/gl_add_group_right"
        app:layout_constraintStart_toStartOf="@+id/gl_add_group_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_group_add_pic" />

    <TextView
        android:id="@+id/tv_add_group_members"
        style="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:drawablePadding="16dp"
        android:fontFamily="@font/amiko_semibold"
        android:hint="Members"
        android:padding="12dp"
        android:text="Groups"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/gl_add_group_right"
        app:layout_constraintStart_toStartOf="@+id/gl_add_group_left"
        app:layout_constraintTop_toBottomOf="@+id/et_add_group_gname" />


</androidx.constraintlayout.widget.ConstraintLayout>