<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include7"
        layout="@layout/toolbar_edit" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_edit_template_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_edit_template_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <EditText
        android:id="@+id/et_edit_template_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_corner"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_vertical"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Biology Exam #1 Template"
        android:textColor="#374151"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_edit_template_right"
        app:layout_constraintStart_toStartOf="@+id/gl_edit_template_left"
        app:layout_constraintTop_toBottomOf="@+id/include7" />

    <EditText
        android:id="@+id/et_edit_template_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_corner"
        android:drawableLeft="@drawable/subjecticon"
        android:drawablePadding="16dp"

        android:fontFamily="@font/amiko_bold"
        android:gravity="center_vertical"
        android:text="Biology Exam #1"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gl_edit_template_right"
        app:layout_constraintStart_toStartOf="@+id/gl_edit_template_left"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_template_title" />

    <EditText
        android:id="@+id/et_edit_template_notes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corner"
        android:drawableLeft="@drawable/notesicon"
        android:drawablePadding="16dp"
        android:fontFamily="@font/amiko_semibold"
        android:gravity="start"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:text="Please take note of the following for your exam tomorrow:"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom_edit_template"
        app:layout_constraintEnd_toEndOf="@+id/gl_edit_template_right"
        app:layout_constraintStart_toStartOf="@+id/gl_edit_template_left"
        app:layout_constraintTop_toBottomOf="@+id/et_edit_template_subject" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_edit_template"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="670dp" />

</androidx.constraintlayout.widget.ConstraintLayout>